---
import Layout from '../../../../layouts/LayoutEcommerce.astro';
import Product from '../../../../components/ecommerce/producto/Product';
import { productsList } from '../../../../data/product';
const { id } = Astro.params;
if (!id) return Astro.redirect('/e-commerce/shop');
const normalice = Number(id)- 1
const product = productsList[normalice]
---

<Layout title="Tienda">
  <main class="main">
    <Product   product={product}  client:load/>
  </main>
---

<style>
.main{
    padding-top: 50px;
}
</style>