<style>
    /* --- Variables de Color --- */
    :root {
        --primary-dark: #0f172a;
        --secondary-text: #475569;
        --accent-color: #f1c40f;
        --accent-light: #fefce8;
        --bg-light: #f8fafc;
        --border-light: #e2e8f0;
    }

    .services {
        padding: 8rem 2rem;
        background-color: var(--bg-light);
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
    }

    /* --- Título de Sección Mejorado --- */
    .section-title {
        text-align: center;
        margin-bottom: 5rem;
    }
    .section-title .pre-title {
        font-size: 0.9rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1.5px;
        color: var(--accent-color);
        margin-bottom: 1rem;
    }
    .section-title h2 {
        font-size: 2.8rem;
        color: var(--primary-dark);
        margin-bottom: 1.5rem;
    }
    .section-title .subtitle {
        font-size: 1.1rem;
        color: var(--secondary-text);
        max-width: 700px;
        margin: 0 auto;
        line-height: 1.7;
    }

    /* --- Grid de Servicios --- */
    .services-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
        gap: 2.5rem;
    }

    /* --- Tarjeta de Servicio Rediseñada --- */
    .service-card {
        background: #fff;
        padding: 2.5rem;
        border-radius: 16px;
        border: 1px solid var(--border-light);
        box-shadow: 0 4px 6px -1px rgba(0,0,0,0.05), 0 2px 4px -1px rgba(0,0,0,0.03);
        transition: transform 0.3s ease, box-shadow 0.3s ease, border-color 0.3s ease;
        display: flex;
        flex-direction: column;
    }

    .service-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 20px 25px -5px rgba(0,0,0,0.1), 0 10px 10px -5px rgba(0,0,0,0.04);
        border-color: var(--accent-color);
    }

    /* --- Contenedor del Icono --- */
    .service-icon-wrapper {
        width: 70px;
        height: 70px;
        border-radius: 50%;
        background-color: var(--accent-light);
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 2rem;
    }
    .service-icon {
        width: 2.5rem;
        height: 2.5rem;
        color: var(--accent-color);
    }

    .service-card h3 {
        font-size: 1.4rem;
        color: var(--primary-dark);
        margin-bottom: 1rem;
    }

    .service-card p {
        color: var(--secondary-text);
        line-height: 1.7;
        flex-grow: 1; /* Empuja el link hacia abajo */
        margin-bottom: 2rem;
    }

    /* --- Link "Saber Más" --- */
    .read-more {
        color: var(--primary-dark);
        text-decoration: none;
        font-weight: 600;
        transition: color 0.3s ease;
        align-self: flex-start; /* Alinea a la izquierda */
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }
    .arrow-icon {
        width: 1.2rem;
        height: 1.2rem;
        transition: transform 0.3s ease;
    }
    .service-card:hover .read-more {
        color: var(--accent-color);
    }
    .service-card:hover .arrow-icon {
        transform: translateX(5px);
    }

    /* --- Clases para la Animación On-Scroll --- */
    .fade-in-up {
        opacity: 0;
        transform: translateY(30px);
        transition: opacity 0.6s ease-out, transform 0.6s ease-out;
    }
    .fade-in-up.is-visible {
        opacity: 1;
        transform: translateY(0);
    }
    /* Stagger (retraso escalonado) para las tarjetas */
    .service-card:nth-child(2) { transition-delay: 0.1s; }
    .service-card:nth-child(3) { transition-delay: 0.2s; }
    .service-card:nth-child(4) { transition-delay: 0.3s; }
    .service-card:nth-child(5) { transition-delay: 0.4s; }
    .service-card:nth-child(6) { transition-delay: 0.5s; }

</style>

<!-- Script para la animación al hacer scroll -->
<script>
    document.addEventListener('DOMContentLoaded', () => {
        const animatedElements = document.querySelectorAll('.fade-in-up');

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('is-visible');
                    observer.unobserve(entry.target); // Para que la animación se ejecute solo una vez
                }
            });
        }, {
            threshold: 0.1 // El elemento se considera visible cuando el 10% está en pantalla
        });

        animatedElements.forEach(element => {
            observer.observe(element);
        });
    });
</script>