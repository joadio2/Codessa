<style>
  

    .contact {
        padding: 8rem 2rem;
        background-color: #0f172a;
    }
    
    /* --- Título de Sección (reutilizado y adaptado) --- */
    .contact .section-title { text-align: center; margin-bottom: 4rem; }
    .contact .section-title .pre-title { color: #f1c40f; font-size: 0.9rem; font-weight: 600; text-transform: uppercase; letter-spacing: 1.5px; margin-bottom: 1rem; }
    .contact .section-title h2 { font-size: 2.8rem; color: #fff; margin-bottom: 1.5rem; }
    .contact .section-title .subtitle { font-size: 1.1rem; color: #f1f5f9; max-width: 700px; margin: 0 auto; line-height: 1.7; opacity: 0.8; }

    /* --- Contenedor Principal --- */
    .contact-wrapper {
        display: grid;
        grid-template-columns: 2fr 1fr;
        max-width: 1200px;
        margin: 0 auto;
        background: url('https://images.pexels.com/photos/3184465/pexels-photo-3184465.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2') no-repeat center center/cover;
        border-radius: 24px;
        overflow: hidden;
        box-shadow: 0 25px 50px -12px rgba(0,0,0,0.5);
    }

    /* --- Contenedor del Formulario con Efecto Cristal --- */
    .contact-form-container {
        padding: 4rem;
        background: rgba(15, 23, 42, 0.85);
        backdrop-filter: blur(15px);
        color: #fff;
    }
    .contact-form-container h3 { font-size: 1.8rem; margin-bottom: 2.5rem; color: #fff; }
    .form-row { display: grid; grid-template-columns: 1fr 1fr; gap: 1.5rem; }
    .form-group { margin-bottom: 1.5rem; }
    .form-group label { display: block; margin-bottom: 0.75rem; font-weight: 500; color: #f1f5f9; font-size: 0.9rem; }
    .form-group input, .form-group textarea {
        width: 100%; padding: 1rem; background: rgba(255,255,255,0.05);
        border: 1px solid rgba(255,255,255,0.2); border-radius: 8px;
        font-size: 1rem; color: #fff; transition: all 0.3s ease;
    }
    .form-group input::placeholder, .form-group textarea::placeholder { color: rgba(255,255,255,0.4); }
    .form-group input:focus, .form-group textarea:focus {
        outline: none; border-color: #f1c40f;
        box-shadow: 0 0 0 3px rgba(241, 196, 15, 0.3); background: rgba(255,255,255,0.1);
    }

    /* --- Botón de Envío Mejorado --- */
    .btn-submit {
        width: 100%; padding: 1rem; font-size: 1.1rem; font-weight: 600;
        color: #0f172a; background: linear-gradient(45deg, #f1c40f, #d4ac0d);
        border: none; border-radius: 8px; cursor: pointer;
        transition: transform 0.3s ease, box-shadow 0.3s ease; margin-top: 1rem;
        display: inline-flex; align-items: center; justify-content: center; gap: 0.75rem;
    }
    .btn-submit:hover { transform: scale(1.02); box-shadow: 0 10px 20px rgba(241, 196, 15, 0.2); }
    .btn-submit .btn-icon { width: 1.2rem; height: 1.2rem; }

    /* --- Contenedor de Información --- */
    .contact-info-container {
        padding: 4rem; background: rgba(15, 23, 42, 0.85);
        backdrop-filter: blur(15px);
    }
    .contact-info-container h3 { font-size: 1.8rem; margin-bottom: 2.5rem; color: #fff; }
    .contact-item { display: flex; gap: 1.5rem; margin-bottom: 2rem; align-items: flex-start; }
    .contact-item .icon-wrapper {
        flex-shrink: 0; width: 50px; height: 50px; border-radius: 50%;
        background: var(--accent-light); color: #f1c40f;
        display: flex; align-items: center; justify-content: center;
    }
    .contact-item .icon-wrapper svg { width: 1.5rem; height: 1.5rem; }
    .contact-item h4 { font-size: 1.1rem; color: #fff; margin-bottom: 0.5rem; }
    .contact-item p { color: #f1f5f9; opacity: 0.8; line-height: 1.6; margin: 0; }

    /* --- Redes Sociales --- */
    .social-media { border-top: 1px solid rgba(255,255,255,0.2); padding-top: 2rem; margin-top: 2rem; }
    .social-media h4 { font-size: 1.1rem; color: #fff; margin-bottom: 1rem; }
    .social-icons { display: flex; gap: 1rem; }
    .social-icons a {
        width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;
        color: #fff; background: rgba(255,255,255,0.1); border-radius: 50%;
        text-decoration: none; transition: background-color 0.3s ease, color 0.3s ease;
    }
    .social-icons a:hover { background-color: #f1c40f; color: #0f172a; }
    .social-icons a svg { width: 1.2rem; height: 1.2rem; }

    /* --- Animaciones (reutilizadas) --- */
    .fade-in-up { opacity: 0; transform: translateY(30px); transition: opacity 0.6s ease-out, transform 0.6s ease-out; }
    .fade-in-up.is-visible { opacity: 1; transform: translateY(0); }
    .contact-wrapper.fade-in-up { transition-delay: 0.2s; }

    /* --- Diseño Responsivo --- */
    @media (max-width: 992px) {
        .contact-wrapper { grid-template-columns: 1fr; }
        .contact-form-container, .contact-info-container { padding: 2.5rem; }
    }
    @media (max-width: 768px) {
        .form-row { grid-template-columns: 1fr; }
        .contact { padding: 5rem 1.5rem; }
    }
</style>

<!-- Script para la animación (puedes ponerlo al final de tu body) -->
<script>
    document.addEventListener('DOMContentLoaded', () => {
        const animatedElements = document.querySelectorAll('.fade-in-up');
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('is-visible');
                    observer.unobserve(entry.target);
                }
            });
        }, { threshold: 0.1 });
        animatedElements.forEach(element => { observer.observe(element); });
    });
</script>