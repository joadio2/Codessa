---
import LottieHero from '../../../utils/lottieHero';
import Payment from '../../../assets/lottie/succesPayment.json';
import { getLangFromUrl, useTranslations } from "../../../i18n/utils"
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---  
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/svg+xml" href="/public/favicon.svg" />
</head>
<main class="mainContainer">

    <div class="contentWrapper">
      
      <div class="thankYouCard">
        <div class="titleContainer">
          <h1 class="title">
            {t('successPage.title')} <span class="highlight">{t('thanksPage.exclamationMark')}</span>
          </h1>
          <div class="lottie">
            <LottieHero client:only="react" item={Payment}
              width={90}
              height={90}
              auto={false}
            />
          </div>
        </div>
        
        <p class="subtitle">
          {t('successPage.subtitle')}
        </p>
        <a href="/" class="homeButton">
          {t('successPage.buttonText')}
        </a>
      </div>
    </div>

</main>
<style>
    /* Estilo para el contenedor principal */
/* Reset básico */
  html, body {
    padding: 0;
    margin: 0;
  }

  /* Contenedor principal */
  .mainContainer {
    background-color: #0d1117;
    position: relative;
    width: 100%;
    min-height: 100svh; /* svh evita problemas de 100vh en móviles */
    overflow: hidden;
    font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,
      Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif;
  }

  /* Wrapper centrado */
  .contentWrapper {
    z-index: 10;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    min-height: inherit;
    padding: 1.25rem 1rem; /* respiración lateral en mobile */
    box-sizing: border-box;
  }

  /* Tarjeta */
  .thankYouCard {
    width: 100%;
    max-width: 800px;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .titleContainer {
    display: flex;
    flex-direction: column; 
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    margin-bottom: 0.75rem;
    text-align: center;
  }

  .title {
    font-size: 4rem; 
    font-weight: 700;
    color: #ffffff;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
    margin: 0;
  }
  .highlight { color: #30c59b; }

  /* Lottie: tamaño coherente y responsive */
  .lottie {
    width: 84px;   /* cercano a tu 90x90, pero adaptable */
    height: 84px;
    display: block;
    border-bottom-left-radius: 11px;
    border-bottom-right-radius: 11px;
  }

  .subtitle {
    text-align: center;
    font-size: 1.7rem; 
    color: #e4e4e7b6;
    margin: 0 0 1.5rem 0;
    max-width: 60ch; 
  }

  /* Botón Home */
  .homeButton {
    background-color: #30c59b;
    color: #0d1117;
    padding: 0.875rem 1.5rem; /* un pelín más compacto en mobile */
    border-radius: 9999px;
    font-weight: 700;
    font-size: 1.05rem;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    display: inline-block;
    text-decoration: none;
    border: none;
    cursor: pointer;
    margin-top: 0.5rem;
    align-self: center;
  }
  .homeButton:hover {
    transform: translateY(-3px);
    box-shadow: 0 10px 20px rgba(0, 198, 255, 0.2);
  }
  @media screen and (max-width: 768px) {
    .title{
      font-size:3rem ;
    }
    .subtitle{
      font-size: 1.2rem;
    }
  }
</style>