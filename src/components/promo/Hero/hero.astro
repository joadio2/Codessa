---
import Lottie from "lottie-react"
import WebDesigning from "../../../assets/lottie/WebDesigning.json"
import { getLangFromUrl, useTranslations } from "../../../i18n/utilsPromo"
import Badget from './badget.astro';
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---
<section class="hero-container">
    <div class="contentInfo">
        <h1>{t('hero.title')} <span class="highlight">{t('hero.titleHighlight')}</span></h1>
        <p class="subtitle">
            {t('hero.subtitle')}
        </p>
        <a href="#prices" class="cta-button">{t('hero.cta')}</a>
    </div>
    <div class="lottie-container">
        <Lottie
            animationData={WebDesigning}
            loop={true}
            autoplay={true}
            
            client:only="react"
        />
    </div>
    <Badget />
</section>

<style>
    .hero-container {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    gap: 1rem; 
    margin: 0 auto;
    height: 85vh;
    background: radial-gradient(
        circle at top,
        #343d4a 40%,
        var(--color-secondary) 60%
    );
    position: relative;
    overflow: hidden;
}

/* Glow m√≠stico */
.hero-container::before {
    content: '';
    position: absolute;
    top: -20%;
    left: -20%;
    width: 140%;
    height: 140%;
    background: radial-gradient(circle, var(---color-primary) 0%, transparent 70%);
    filter: blur(80px);
    animation: glow 6s ease-in-out infinite alternate;
    pointer-events: none;
    z-index: 0;
}

/* Mini estrellas dispersas */
.hero-container::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: radial-gradient(white 1px, transparent 0);
    background-repeat: repeat;
    background-size: 90px 90px; 
    opacity: 0.4;
    animation: stars 40s linear infinite;
    pointer-events: none;
    z-index: 0;
}

@keyframes glow {
    0% { transform: scale(1) rotate(0deg); opacity: 0.5; }
    50% { transform: scale(1.2) rotate(45deg); opacity: 0.7; }
    100% { transform: scale(1) rotate(90deg); opacity: 0.5; }
}

@keyframes stars {
    0% { background-position: 0 0; }
    100% { background-position: -500px 300px; }
}

/* Mantener contenido encima */
.contentInfo,
.lottie-container,
.Badget {
    position: relative;
    z-index: 1;
}

    .contentInfo {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    max-width: 600px;
    text-align: center;
    }

    .cta-button {
    display: inline-flex;         
    align-items: center;
    justify-content: center;
    width: auto;                 
    min-width: 0;
    margin-inline: 0;             
    padding: 0.9rem 2rem;         
    border-radius: 999px;         
    text-decoration: none;
    background: var(--color-accent);
    color: var(--color-dark);
    font-weight: 700;
    font-size: 1.05rem;
    transition: transform 0.25s ease, box-shadow 0.25s ease, background 0.25s ease;
    box-shadow: 0 8px 18px rgba(0, 198, 255, 0.22);
    white-space: nowrap;          
    }

    .cta-button:hover {
    transform: translateY(-3px);
    box-shadow: 0 12px 26px rgba(0, 198, 255, 0.28);
    background: color-mix(in srgb, var(--color-accent) 88%, #fff);
    }

    .cta-button:focus-visible {
    outline: 3px solid color-mix(in srgb, var(--color-accent) 65%, #fff);
    outline-offset: 2px;
    box-shadow: 0 0 0 6px rgba(0, 198, 255, 0.18);
    }

    .lottie-container {
        width: 400px;
        height: 400px;
    }

    h1 {
        font-size: 3rem; 
    }

    .highlight {
        color: var(--color-accent);
    }

    .subtitle {
        font-size: 1.25rem;
        color: var(--color-light-text);
        margin: 1.5rem 0 2.5rem; 
    }

    

    @media (max-width: 900px) {
    .hero-container {
        min-height: fit-content;
        margin: 0;
        gap: 0;
        flex-direction: column;
        align-items: center;
        text-align: center;

        padding:  1.5rem;
        padding-top: 2rem; 
    }

    .contentInfo {
        max-width: 100%;
        text-align: center;
        margin-top: 0; /* aseguramos que no se empuje hacia abajo */
    }

    .lottie-container {
        width: 80%;
        max-width: 350px;
        height: auto;
        margin: 0 auto 2rem auto;
    }

    h1 {
        font-size: 2.25rem;
    }

    .subtitle {
        font-size: 1.1rem;
        margin-left: auto;
        margin-right: auto;
    }
}
</style>