---

const { meetings } = Astro.props;
console.log("MEETINGS", meetings);
---

<div class="meetings-widget">
  <div class="widget-header">
    <h3>Pr√≥ximas Reuniones</h3>
    <button class="btn-add">
      <svg width="16" height="16" fill="currentColor" viewBox="0 0 24 24">
        <path d="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"/>
      </svg>
      Nueva
    </button>
  </div>

  <div class="meetings-list">
    {meetings.map((meeting) => (
      <div class="meeting-card">
        <div class="meeting-info">
          <div class="meeting-time">
            <span class="time">{meeting.horario_espana}</span>
            <span class="date">{meeting.dia}</span>
          </div>
          
          <div class="meeting-details">
            <h3 class="meeting-title">{meeting.order_promo.nombre_negocio}</h3>
          </div>
        </div>

        <div class="meeting-actions">
          <button class="action-btn join">Unirse</button>
        </div>
      </div>
    ))}
  </div>
  
  <div class="widget-footer">
    <a href="#" class="view-all">Ver todas las reuniones</a>
  </div>
</div>

<style>
  .meetings-widget {
    background-color: var(--color-primary);
    border-radius: var(--border-radius-lg);
    border: 1px solid var(--color-border);
    padding: 1.5rem;
    height: fit-content;
  }

  .widget-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
  }

  .widget-header h3 {
    color: var(--color-text);
    font-size: 1.125rem;
    font-weight: 600;
  }

  .btn-add {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 0.875rem;
    background-color: var(--color-accent);
    color: white;
    border-radius: var(--border-radius);
    font-size: 0.875rem;
    font-weight: 500;
    transition: all 0.2s ease;
  }

  .btn-add:hover {
    background-color: var(--color-accent-hover);
  }

  .meetings-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .meeting-card {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem;
    background-color: var(--color-secondary);
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius);
    transition: all 0.2s ease;
  }

  .meeting-card:hover {
    border-color: var(--color-accent);
    box-shadow: var(--shadow-md);
  }

  .meeting-info {
    display: flex;
    gap: 1rem;
    flex: 1;
    align-items: center;
  }

  .meeting-time {
    display: flex;
    flex-direction: column;
    align-items: center;
    min-width: 60px;
  }

  .time {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-accent);
  }

  .date {
    font-size: 0.75rem;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .meeting-details {
   flex: 1;
   display: flex;
   justify-content: center; 
   align-items: center; 
  }

  .meeting-title {
    font-size: 0.975rem;
    font-weight: 500;
    color: var(--color-text);
    margin-bottom: 0.5rem;
  }

  .meeting-actions .action-btn {
    padding: 0.5rem 1rem;
    background-color: var(--color-accent);
    color: white;
    border-radius: var(--border-radius);
    font-size: 0.875rem;
    font-weight: 500;
    transition: all 0.2s ease;
  }

  .meeting-actions .action-btn:hover {
    background-color: var(--color-accent-hover);
  }

  .widget-footer {
    margin-top: 1.5rem;
    padding-top: 1rem;
    border-top: 1px solid var(--color-border);
    text-align: center;
  }

  .view-all {
    color: var(--color-accent);
    font-size: 0.875rem;
    font-weight: 500;
    transition: color 0.2s ease;
  }

  .view-all:hover {
    color: var(--color-accent-hover);
  }

  @media (max-width: 768px) {
    .meeting-card {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }

    .meeting-info {
      width: 100%;
    }

    .meeting-actions {
      width: 100%;
    }

    .meeting-actions .action-btn {
      width: 100%;
    }
  }
</style>