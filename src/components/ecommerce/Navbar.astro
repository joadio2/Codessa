---
// Header.astro - Componente de header con navbar
---

<header class="header">
  <nav class="navbar">
    <div class="nav-container">
      <!-- Logo -->
      <div class="nav-brand">
        <a href="/" class="brand-link">
          <div class="logo">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.94-.49-7-3.85-7-7.93 0-.62.08-1.21.21-1.79L9 15v1c0 1.1.9 2 2 2v1.93zm6.9-2.54c-.26-.81-1-1.39-1.9-1.39h-1v-3c0-.55-.45-1-1-1H8v-2h2c.55 0 1-.45 1-1V7h2c1.1 0 2-.9 2-2v-.41c2.93 1.19 5 4.06 5 7.41 0 2.08-.8 3.97-2.1 5.39z"/>
            </svg>
            <span class="brand-text">Belleza</span>
          </div>
        </a>
      </div>

      <!-- Desktop Navigation -->
      <div class="nav-menu">
        <ul class="nav-list">
          <li class="nav-item">
            <a href="/e-commerce" class="nav-link">Inicio</a>
          </li>
          <li class="nav-item">
            <a href="/e-commerce/shop" class="nav-link">Productos</a>
          </li>
          <li class="nav-item">
            <a href="/e-commerce/sobre-nosotros" class="nav-link">Nosotros</a>
          </li>
          <li class="nav-item">
            <a href="/e-commerce/contacto" class="nav-link">Contacto</a>
          </li>
        </ul>
      </div>

      <!-- Right Side Actions -->
      <div class="nav-actions">
        <!-- Search -->
        <button class="action-btn search-btn" title="Buscar">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="11" cy="11" r="8"/>
            <path d="M21 21l-4.35-4.35"/>
          </svg>
        </button>

        <!-- User Account -->
        <button class="action-btn user-btn" title="Mi cuenta">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
            <circle cx="12" cy="7" r="4"/>
          </svg>
        </button>

        <!-- Shopping Cart -->
        <button class="action-btn cart-btn" title="Carrito de compras">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M9 22C9.55228 22 10 21.5523 10 21C10 20.4477 9.55228 20 9 20C8.44772 20 8 20.4477 8 21C8 21.5523 8.44772 22 9 22Z"/>
            <path d="M20 22C20.5523 22 21 21.5523 21 21C21 20.4477 20.5523 20 20 20C19.4477 20 19 20.4477 19 21C19 21.5523 19.4477 22 20 22Z"/>
            <path d="M1 1H5L7.68 14.39C7.77144 14.8504 8.02191 15.264 8.38755 15.5583C8.75318 15.8526 9.2107 16.009 9.68 16H19.4C19.8693 16.009 20.3268 15.8526 20.6925 15.5583C21.0581 15.264 21.3086 14.8504 21.4 14.39L23 6H6"/>
          </svg>
          <span class="cart-count">2</span>
        </button>

        <!-- Mobile Menu Toggle -->
        <button class="mobile-menu-btn" id="mobile-menu-toggle">
          <span class="hamburger-line"></span>
          <span class="hamburger-line"></span>
          <span class="hamburger-line"></span>
        </button>
      </div>
    </div>

    <!-- Mobile Menu -->
    <div class="mobile-menu" id="mobile-menu">
      <div class="mobile-menu-content">
        <ul class="mobile-nav-list">
          <li><a href="/e-commerce" class="mobile-nav-link">Inicio</a></li>
          <li><a href="/e-commerce/shop" class="mobile-nav-link">Productos</a></li>
          <li><a href="/e-commerce/sobre-nosotros" class="mobile-nav-link">Nosotros</a></li>
          <li><a href="/e-commerce/contacto" class="mobile-nav-link">Contacto</a></li>
        </ul>
      </div>
    </div>
  </nav>
</header>

<script>
  // Mobile menu toggle
  const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
  const mobileMenu = document.getElementById('mobile-menu');
  
  mobileMenuToggle?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('active');
    mobileMenuToggle.classList.toggle('active');
  });

  // Mobile dropdown toggle
  const mobileDropdownToggles = document.querySelectorAll('.mobile-dropdown-toggle');
  
  mobileDropdownToggles.forEach(toggle => {
    toggle.addEventListener('click', () => {
      const dropdown = toggle.parentElement;
      dropdown?.classList.toggle('active');
    });
  });

  // Close mobile menu when clicking outside
  document.addEventListener('click', (e) => {
    if (!mobileMenu?.contains(e.target) && !mobileMenuToggle?.contains(e.target)) {
      mobileMenu?.classList.remove('active');
      mobileMenuToggle?.classList.remove('active');
    }
  });

  // Header scroll effect
  let lastScrollY = window.scrollY;
  const header = document.querySelector('.header');

  window.addEventListener('scroll', () => {
    const currentScrollY = window.scrollY;
    
    if (currentScrollY > 100) {
      header?.classList.add('scrolled');
    } else {
      header?.classList.remove('scrolled');
    }

    if (currentScrollY > lastScrollY && currentScrollY > 100) {
      header?.classList.add('hidden');
    } else {
      header?.classList.remove('hidden');
    }

    lastScrollY = currentScrollY;
  });
</script>

<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(255, 107, 157, 0.1);
    transition: all 0.3s ease;
  }

  .header.scrolled {
    background: rgba(255, 255, 255, 0.98);
    box-shadow: 0 2px 20px rgba(0, 0, 0, 0.1);
  }

  .header.hidden {
    transform: translateY(-100%);
  }

  .navbar {
    width: 100%;
  }

  .nav-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 70px;
  }

  /* Logo */
  .nav-brand {
    flex-shrink: 0;
  }

  .brand-link {
    text-decoration: none;
    color: inherit;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: #c44569;
  }

  .brand-text {
    font-size: 1.5rem;
    font-weight: 600;
    letter-spacing: -0.02em;
  }

  /* Desktop Navigation */
  .nav-menu {
    display: flex;
    align-items: center;
  }

  .nav-list {
    display: flex;
    align-items: center;
    gap: 2rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .nav-item {
    position: relative;
  }

  .nav-link {
    display: flex;
    align-items: center;
    gap: 0.3rem;
    padding: 0.5rem 0;
    color: #2c2c2c;
    text-decoration: none;
    font-weight: 500;
    transition: color 0.3s ease;
    position: relative;
  }

  .nav-link:hover {
    color: #c44569;
  }

  .nav-link::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 2px;
    background: linear-gradient(135deg, #ff6b9d, #c44569);
    transition: width 0.3s ease;
  }

  .nav-link:hover::after {
    width: 100%;
  }

  /* Dropdown */
  .dropdown {
    position: relative;
  }

  .dropdown-menu {
    position: absolute;
    top: 100%;
    left: 0;
    background: white;
    border-radius: 10px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    padding: 0.5rem 0;
    min-width: 180px;
    opacity: 0;
    visibility: hidden;
    transform: translateY(-10px);
    transition: all 0.3s ease;
    border: 1px solid rgba(255, 107, 157, 0.1);
  }

  .dropdown:hover .dropdown-menu {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  .dropdown-item {
    display: block;
    padding: 0.75rem 1.5rem;
    color: #2c2c2c;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .dropdown-item:hover {
    background: linear-gradient(135deg, #ff6b9d, #c44569);
    color: white;
  }

  /* Actions */
  .nav-actions {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .action-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border: none;
    background: transparent;
    color: #666;
    border-radius: 50%;
    cursor: pointer;
    transition: all 0.3s ease;
    position: relative;
  }

  .action-btn:hover {
    background: rgba(255, 107, 157, 0.1);
    color: #c44569;
  }

  .cart-count {
    position: absolute;
    top: -5px;
    right: -5px;
    background: linear-gradient(135deg, #ff6b9d, #c44569);
    color: white;
    font-size: 0.75rem;
    font-weight: 600;
    width: 18px;
    height: 18px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  /* Mobile Menu Button */
  .mobile-menu-btn {
    display: none;
    flex-direction: column;
    justify-content: center;
    width: 30px;
    height: 30px;
    background: transparent;
    border: none;
    cursor: pointer;
    padding: 0;
  }

  .hamburger-line {
    width: 100%;
    height: 2px;
    background: #2c2c2c;
    margin: 3px 0;
    transition: all 0.3s ease;
    transform-origin: center;
  }

  .mobile-menu-btn.active .hamburger-line:nth-child(1) {
    transform: rotate(45deg) translate(6px, 6px);
  }

  .mobile-menu-btn.active .hamburger-line:nth-child(2) {
    opacity: 0;
  }

  .mobile-menu-btn.active .hamburger-line:nth-child(3) {
    transform: rotate(-45deg) translate(6px, -6px);
  }

  /* Mobile Menu */
  .mobile-menu {
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    background: white;
    border-top: 1px solid rgba(255, 107, 157, 0.1);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    opacity: 0;
    visibility: hidden;
    transform: translateY(-20px);
    transition: all 0.3s ease;
  }

  .mobile-menu.active {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  .mobile-menu-content {
    padding: 1rem 2rem;
  }

  .mobile-nav-list {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .mobile-nav-list > li {
    border-bottom: 1px solid rgba(255, 107, 157, 0.1);
  }

  .mobile-nav-list > li:last-child {
    border-bottom: none;
  }

  .mobile-nav-link {
    display: block;
    padding: 1rem 0;
    color: #2c2c2c;
    text-decoration: none;
    font-weight: 500;
    transition: color 0.3s ease;
  }

  .mobile-nav-link:hover {
    color: #c44569;
  }

  .mobile-dropdown-toggle {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    padding: 1rem 0;
    background: transparent;
    border: none;
    color: #2c2c2c;
    font-weight: 500;
    cursor: pointer;
    text-align: left;
  }

  .mobile-dropdown-menu {
    list-style: none;
    margin: 0;
    padding: 0;
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease;
  }

  .mobile-dropdown.active .mobile-dropdown-menu {
    max-height: 200px;
  }

  .mobile-dropdown-menu .mobile-nav-link {
    padding: 0.75rem 0 0.75rem 1rem;
    font-size: 0.9rem;
    color: #666;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .nav-container {
      padding: 0 1rem;
      height: 60px;
    }

    .nav-menu {
      display: none;
    }

    .mobile-menu-btn {
      display: flex;
    }

    .nav-actions .search-btn,
    .nav-actions .user-btn {
      display: none;
    }

    .brand-text {
      font-size: 1.3rem;
    }
  }

  @media (max-width: 480px) {
    .nav-container {
      padding: 0 1rem;
    }

    .brand-text {
      display: none;
    }
  }
</style>