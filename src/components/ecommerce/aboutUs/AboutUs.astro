<style>
  .about-us {
    padding: 6rem 0;
    background: linear-gradient(135deg, #fdf7f0 0%, #f8f1eb 100%);
    position: relative;
    overflow: hidden;
  }

  .about-us::before {
    content: '';
    position: absolute;
    top: -30%;
    left: -20%;
    width: 50%;
    height: 150%;
    background: linear-gradient(45deg, rgba(255, 182, 193, 0.08) 0%, rgba(255, 218, 185, 0.08) 100%);
    border-radius: 50%;
    z-index: 1;
  }

  .about-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    position: relative;
    z-index: 2;
  }

  .about-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 5rem;
    align-items: center;
    margin-bottom: 5rem;
  }

  .about-text {
    animation: fadeInUp 1s ease-out;
  }

  .section-header {
    margin-bottom: 2.5rem;
  }

  .about-title {
    font-size: clamp(2.2rem, 4vw, 3.5rem);
    font-weight: 300;
    line-height: 1.2;
    margin-bottom: 1rem;
    color: #2c2c2c;
    letter-spacing: -0.02em;
  }

  .highlight {
    background: linear-gradient(135deg, #ff6b9d, #c44569);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    font-weight: 400;
  }

  .about-subtitle {
    font-size: 1.1rem;
    color: #666;
    font-style: italic;
    margin-bottom: 0;
  }

  .story-text {
    font-size: 1.1rem;
    line-height: 1.7;
    color: #555;
    margin-bottom: 3rem;
  }

  .values-grid {
    display: grid;
    gap: 2rem;
  }

  .value-item {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    padding: 1.5rem;
    background: rgba(255, 255, 255, 0.6);
    border-radius: 15px;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 182, 193, 0.2);
    transition: all 0.3s ease;
  }

  .value-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(255, 107, 157, 0.15);
  }

  .value-icon {
    font-size: 1.5rem;
    min-width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #ff6b9d, #c44569);
    border-radius: 50%;
    color: white;
    flex-shrink: 0;
  }

  .value-item h3 {
    font-size: 1.1rem;
    font-weight: 500;
    color: #2c2c2c;
    margin: 0 0 0.5rem 0;
  }

  .value-item p {
    font-size: 0.95rem;
    color: #666;
    margin: 0;
    line-height: 1.5;
  }

  .about-visual {
    position: relative;
    animation: fadeInRight 1s ease-out 0.3s both;
  }

  .image-stack {
    position: relative;
    height: 500px;
  }

  .main-image {
    position: absolute;
    top: 0;
    right: 0;
    width: 70%;
    height: 60%;
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
    z-index: 2;
  }

  .brand-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .image-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(45deg, rgba(255, 107, 157, 0.1), rgba(196, 69, 105, 0.1));
  }

  .secondary-image {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 60%;
    height: 50%;
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.15);
    z-index: 3;
  }

  .team-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .floating-elements {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 1;
  }

  .floating-item {
    position: absolute;
    border-radius: 50%;
    background: linear-gradient(135deg, rgba(255, 107, 157, 0.6), rgba(196, 69, 105, 0.6));
    animation: float 8s ease-in-out infinite;
  }

  .item-1 {
    width: 50px;
    height: 50px;
    top: 15%;
    left: 10%;
    animation-delay: 0s;
  }

  .item-2 {
    width: 30px;
    height: 30px;
    top: 70%;
    right: 15%;
    animation-delay: 3s;
  }

  .item-3 {
    width: 70px;
    height: 70px;
    bottom: 20%;
    right: 5%;
    animation-delay: 6s;
  }

  .mission-section {
    text-align: center;
    padding: 4rem 0;
    background: rgba(255, 255, 255, 0.4);
    border-radius: 25px;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 182, 193, 0.2);
  }

  .mission-content {
    max-width: 700px;
    margin: 0 auto;
  }

  .mission-title {
    font-size: clamp(1.8rem, 3vw, 2.5rem);
    font-weight: 300;
    margin-bottom: 1.5rem;
    color: #2c2c2c;
  }

  .mission-text {
    font-size: 1.1rem;
    line-height: 1.7;
    color: #555;
    margin-bottom: 2.5rem;
  }

  .cta-section {
    margin-top: 2rem;
  }

  .btn-primary {
    padding: 1rem 2.5rem;
    border-radius: 50px;
    text-decoration: none;
    font-weight: 500;
    background: linear-gradient(135deg, #ff6b9d, #c44569);
    color: white;
    box-shadow: 0 4px 15px rgba(255, 107, 157, 0.3);
    transition: all 0.3s ease;
    display: inline-block;
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(255, 107, 157, 0.4);
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeInRight {
    from {
      opacity: 0;
      transform: translateX(30px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0px) rotate(0deg);
    }
    50% {
      transform: translateY(-15px) rotate(180deg);
    }
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .about-us {
      padding: 4rem 0;
    }

    .about-content {
      grid-template-columns: 1fr;
      gap: 3rem;
      margin-bottom: 3rem;
    }

    .about-visual {
      order: -1;
    }

    .image-stack {
      height: 350px;
    }

    .values-grid {
      gap: 1.5rem;
    }

    .value-item {
      padding: 1.2rem;
    }

    .floating-item {
      display: none;
    }

    .mission-section {
      padding: 3rem 1rem;
      margin: 0 1rem;
    }
  }

  @media (max-width: 480px) {
    .about-container {
      padding: 0 1rem;
    }

    .value-item {
      flex-direction: column;
      text-align: center;
      gap: 0.8rem;
    }

    .btn-primary {
      padding: 0.8rem 2rem;
      font-size: 0.9rem;
    }
  }
</style>