---

<section class="portfolio-section">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">{t("portafolio.sectionTitle")}</h2>
      <p class="section-subtitle">
        {t("portafolio.sectionSubtitle")}
      </p>
    </div>

    <div class="portfolio-grid">
      {projects.map((project) => (
        <article class="portfolio-item" data-category={project.category}>
          <div class="browser-mockup">
            <div class="browser-dots">
              <span class="dot red"></span>
              <span class="dot yellow"></span>
              <span class="dot green"></span>
            </div>
            <div class="url-bar">
              <span class="protocol">https://</span>
              <span class="domain">{project.url}</span>
            </div>
            <div class="browser-actions">
              <span class="status-indicator" data-status={project.status}></span>
            </div>
          </div>

          <div class="website-preview">
            {project.image ? (
              <img 
                src={project.image} 
                alt={`Preview de ${project.title}`}
                class="preview-image"
                loading="lazy"
              />
            ) : (
              <div class="preview-placeholder">
                <svg width="80" height="80" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M21 16V8C21 6.9 20.1 6 19 6H5C3.9 6 3 6.9 3 8V16C3 17.1 3.9 18 5 18H19C20.1 18 21 17.1 21 16ZM5 8H19V16H5V8Z" fill="currentColor"/>
                  <path d="M7 10H17V12H7V10Z" fill="currentColor"/>
                  <path d="M7 13H13V15H7V13Z" fill="currentColor"/>
                </svg>
              </div>
            )}
            <div class="preview-overlay">
              <astro-link class="view-project-btn" data-url={project.redirect}>
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M12 2L13.09 8.26L22 9L13.09 9.74L12 16L10.91 9.74L2 9L10.91 8.26L12 2Z" fill="currentColor"/>
                </svg>
                {t("portafolio.viewProject")}
              </astro-link>
            </div>
          </div>

          <div class="portfolio-info">
            <div class="project-header">
              <h3 class="project-title">{project.title}</h3>
              <span class="project-category">{project.category}</span>
            </div>
            <p class="project-description">{project.description}</p>
            
            <div class="tech-stack">
              {project.tech.map((tech) => (
                <span class="tech-tag">{tech}</span>
              ))}
            </div>

            <div class="project-actions">
              <button class="btn-primary" data-url={project.redirect}>
                {t("portafolio.viewSite")}
              </button>
              <button class="btn-secondary">
                {t("portafolio.details")}
              </button>
            </div>
          </div>
        </article>
      ))}
    </div>

    <div class="section-footer">
      <p class="footer-text">{t("portafolio.footerText")}</p>
      <a class="cta-button" href={`/${lang}/contact`}>
        {t("portafolio.ctaButton")}
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
